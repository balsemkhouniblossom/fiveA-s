pipeline {
    agent any
    stages {
        stage('Install dependencies') {
            steps {
                script {
                   sh('npm ci')
                }
            }
        }
        stage('Unit Test') {
            steps {
               script {
                sh('npm test')
                echo "No tests to run."

             }
            }
        }
        stage('Build application') {
            steps {
                script {
                    sh('npm run build-dev')
                }
            }
        }
    }
}
